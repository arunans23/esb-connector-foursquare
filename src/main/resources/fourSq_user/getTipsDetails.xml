<template xmlns="http://ws.apache.org/ns/synapse" name="getTipsDetails">
    <parameter name="userId"/>

    <parameter name="sort" description="sort the tips"/>
    <parameter name="limit" description="list limit"/>
    <parameter name="offset" description="list offset"/>

    <sequence>
        <property name="HTTP_METHOD" value="GET" scope="axis2" type="STRING"/>
        <property name="uri.var.userId" expression="$func:userId" scope="default" type="STRING"/>
        <property name="Accept-Encoding" scope="transport" action="remove"/>
        <property name="messageType" value="application/json" scope="axis2" type="STRING"/>

        <property name="uri.var.sort" expression="$func:sort"/>
        <property name="uri.var.limit" expression="$func:limit"/>
        <property name="uri.var.offset" expression="$func:offset"/>

        <property name="parameters" value="0"/>

        <filter
                xpath="get-property('uri.var.sort') = '' or  not(string(get-property('uri.var.sort')))">
            <then>
                <property name="uri.var.sort" value=""/>
            </then>
            <else>
                <property name="parameters" expression="fn:concat(get-property('parameters'),
                '&amp;sort=', get-property('uri.var.sort'))"/>
            </else>
        </filter>

        <filter
                xpath="get-property('uri.var.limit') = '' or  not(string(get-property('uri.var.limit')))">
            <then>
                <property name="uri.var.limit" value=""/>
            </then>
            <else>
                <property name="parameters" expression="fn:concat(get-property('parameters'),
                '&amp;limit=', get-property('uri.var.limit'))"/>
            </else>
        </filter>

        <filter
                xpath="get-property('uri.var.offset') = '' or  not(string(get-property('uri.var.offset')))">
            <then>
                <property name="uri.var.offset" value=""/>
            </then>
            <else>
                <property name="parameters" expression="fn:concat(get-property('parameters'),
                '&amp;offset=', get-property('uri.var.offset'))"/>
            </else>
        </filter>


        <payloadFactory media-type="xml">
            <format>
                <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                    <soapenv:Header/>
                    <soapenv:Body/>
                </soapenv:Envelope>
            </format>
            <args/>
        </payloadFactory>
        <property name="messageType" value="application/json" scope="axis2"/>
        <call>
            <endpoint>
                <http method="GET"
                      uri-template="{uri.var.foursquare.apiUrl}/v2/users/{+uri.var.userId}/tips?v=20131213&amp;{+uri.var.parameters}&amp;oauth_token={+uri.var.foursquare.accessToken}"/>
            </endpoint>
        </call>

    </sequence>
</template>